<div class="container">
  <header>
    <h1>Task list</h1>
  </header>
  <main>
    <div>
      <div id="list-notification"></div>
    </div>
    <div id="list-container">
      <div id="form-container">
      </div>
      <h2>Your tasks</h2>
      <form action="/tasks" method="post">
        <div>
          <input type="text" name="task" id="task" placeholder="Add a task" />
          <button type="submit" class="btn btn-outline-primary">Submit</button>
        </div>
      </form>
    </div>
    <ul id="list">
      <% @tasks.each do |task| %>
      <li id="task-<%= task[:id] %>">
        <%= task[:name] %>
        <span class="btn-group btn-group-sm" role="group" aria-label="Small button group">
          <form action="/tasks/<%= task[:id] %>/edit" method="get" data-turbo-frame="edit-task-frame">
            <button type="submit" class="btn btn-outline-primary">Edit</button>
          </form>
          <a href="/tasks/<%= task[:id] %>/delete" class="btn btn-outline-primary" role="button">Delete</a>
        </span>
        </li>
      <% end %>
    </ul>
    <div id="edit-task">
    </div>
  </main>
</div>
